<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.whichbus"
        version   = "1.0.0">
    <name>WhichBus</name>

    <description>
        A simple, beautiful way to navigate public transit.
    </description>

    <author href="http://whichbus.org" email="team@whichbus.org">
        WhichBus, LLC.
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />
    <feature name="http://api.phonegap.com/1.0/geolocation"/>

    <preference name="phonegap-version" value="2.1.0" />
    <preference name="orientation"      value="portrait" />
    <preference name="target-device"    value="handset" />
    <preference name="fullscreen"       value="false" />
    <preference name="stay-in-webview" value="true" />
    <preference name="android-minSdkVersion" value="14" />

    <access origin="https://www.facebook.com/whichbus" browserOnly="true" />
    <access origin="https://twitter.com/whichbus" browserOnly="true" />
    <access origin="http://whichbus.tumblr.com/" browserOnly="true" />
    <access origin="http://eepurl.com/kdy2v" browserOnly="true" />
    <access origin="http://whichb.us2.list-manage.com/" browserOnly="true" />
    <access origin="http://whichbus.uservoice.com/" browserOnly="true" />
    <access origin="*"  />

    <icon src="res/icon/ios/icon_54x54.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="res/icon/ios/icon_72x72.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="res/icon/ios/icon_114x114.png"         gap:platform="ios"        width="114" height="114" />
    <icon src="res/icon/android/android-icon-ldpi-36.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="res/icon/android/android-icon-mdpi-48.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="res/icon/android/android-icon-hdpi-72.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="res/icon/android/android-icon-xhdpi-96.png"  gap:platform="android"    gap:density="xhdpi" />
    <icon src="res/icon/windows-phone/WP_48.png"  gap:platform="winphone" />
    <icon src="res/icon/windows-phone/WP_73.png" gap:platform="winphone"   gap:role="background" />
    <icon src="icon.png" />

    <preference name="webviewbounce" value="false" />
    <preference name="detect-data-types" value="false" />
    <preference name="prerendered-icon" value="true" />

    <gap:splash src="res/screen/ios/iphone_portrait.png"    gap:platform="ios"     width="320" height="480" />
    <gap:splash src="res/screen/ios/iphone_portrait_2x.png" gap:platform="ios"     width="640" height="960" />
    <gap:splash src="res/screen/ios/ipad_portrait.png"      gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="res/screen/ios/ipad_landscape.png"     gap:platform="ios"     width="1024" height="768" />
    <gap:splash src="res/screen/ios/iphone5_portrait.png"     gap:platform="ios"     width="640" height="1136" />
    <gap:splash src="res/screen/android/android-ldpi-portrait.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res/screen/android/android-mdpi-portrait.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res/screen/android/android-hdpi-portrait.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res/screen/android/android-xhdpi-portrait.png" gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="res/screen/windows-phone/android-hdpi-portrait.jpg" gap:platform="winphone" />

    
</widget>