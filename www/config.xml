<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.hello-world"
        version   = "2.0.0">
    <name>WhichBus</name>

    <description>
        A simple, beautiful way to navigate public transit.
    </description>

    <author href="http://whichbus.org" email="team@whichbus.org">
        WhichBus, LLC.
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />
    <preference name="orientation" value="portrait" />
    <feature name="http://api.phonegap.com/1.0/geolocation"/>

    <preference name="phonegap-version" value="2.1.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="stay-in-webview" value="true" />

    <icon src="icon.png" />
    <preference name="webviewbounce" value="false" />
    <preference name="detect-data-types" value="false" />
    <preference name="prerendered-icon" value="true" />

    <gap:splash src="res/screen/paige/iphone-portrait-2x.png" />
    <gap:splash src="res/screen/paige/iphone-portrait.png"    gap:platform="ios"     width="320" height="480" />
    <gap:splash src="res/screen/paige/iphone-portrait-2x.png" gap:platform="ios"     width="640" height="960" />
    <gap:splash src="res/screen/paige/ipad-portrait.png"      gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="res/screen/paige/ipad-landscape.png"     gap:platform="ios"     width="1024" height="768" />

    
</widget>
